{
  "name": "bmvc/bmvc",
  "description": "Framework web moderne et professionnel 100% en français - MVC avec CLI, i18n, API REST et Tests",
  "type": "project",
  "license": "MIT",
  "keywords": [
    "framework",
    "mvc",
    "php",
    "français",
    "cli",
    "api-rest",
    "i18n",
    "routing",
    "orm"
  ],
  "authors": [
    {
      "name": "Josue Bondo",
      "email": "josuebondojw@gmail.com",
      "role": "Creator"
    }
  ],
  "require": {
    "php": ">=8.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Core\\": "core/",
      "Bmvc\\": "src/"
    },
    "files": [
      "core/Helpers.php"
    ]
  },
  "scripts": {
    "post-install-cmd": [
      "Bmvc\\InstallerScript::afficherLogo"
    ],
    "post-create-project-cmd": [
      "Bmvc\\InstallerScript::afficherLogo"
    ]
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.0-dev"
    }
  }
}
