{
  "name": "bmvc/bmvc",
  "version": "1.0.10",
  "description": "Framework web moderne et professionnel 100% en français - MVC avec CLI, i18n, API REST et Tests",
  "type": "project",
  "license": "MIT",
  "keywords": [
    "framework",
    "mvc",
    "php",
    "français",
    "cli",
    "api-rest",
    "i18n",
    "routing",
    "orm"
  ],
  "authors": [
    {
      "name": "Josue Bondo",
      "email": "josuebondojw@gmail.com",
      "role": "Creator"
    }
  ],
  "require": {
    "php": ">=8.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Core\\": "core/",
      "Bmvc\\": "src/"
    },
    "files": [
      "core/Helpers.php"
    ]
  },
  "scripts": {
    "post-install-cmd": [
      "Bmvc\\InstallerScript::afficherLogo"
    ],
    "post-create-project-cmd": [
      "Bmvc\\InstallerScript::afficherLogo"
    ],
    "test": [
      "echo Lancement de tous les tests du framework BMVC...",
      "@test:all"
    ],
    "test:all": [
      "@test:unit",
      "@test:functional"
    ],
    "test:unit": [
      "echo.",
      "echo [1/2] Tests Unitaires",
      "phpunit --testsuite=Unit --colors=always"
    ],
    "test:functional": [
      "echo.",
      "echo [2/2] Tests Fonctionnels",
      "phpunit --testsuite=Functional --colors=always",
      "php scripts/test-output.php success"
    ],
    "test:coverage": [
      "echo Génération du rapport de couverture...",
      "phpunit --coverage-html=storage/coverage --coverage-text",
      "echo.",
      "echo Rapport généré: storage/coverage/index.html"
    ],
    "lint": [
      "php -l app/ core/ src/"
    ],
    "check": [
      "@lint"
    ]
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.0-dev"
    },
    "releases": {
      "1.0.10": "2026-01-06",
      "1.0.9": "2026-01-15",
      "1.0.8": "2026-01-12",
      "1.0.7": "2026-01-10",
      "1.0.6": "2026-01-08",
      "1.0.5": "2026-01-06",
      "1.0.4": "2026-01-04",
      "1.0.3": "2026-01-02",
      "1.0.2": "2025-12-30",
      "1.0.1": "2025-12-28",
      "1.0.0": "2025-12-26"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "9.5"
  }
}
