# ================================================
NOM_APPLICATION=BMVC
ENVIRONNEMENT=production
DEBOGAGE=false
CLE_SECRETE=your-production-secret-key-32-chars-min
FUSEAU_HORAIRE=Europe/Paris
LOCALE=fr
